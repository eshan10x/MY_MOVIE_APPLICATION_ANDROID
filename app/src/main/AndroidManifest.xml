<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movieapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApplication">
        <activity android:name=".InstructionsActivity"></activity>
        <activity android:name=".RatingsTwoActivity" />
        <activity android:name=".RatingsActivity" />
        <activity android:name=".UpdateViewActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".EditMovieActivity" />
        <activity android:name=".FavoritesActivty" />
        <activity android:name=".DisplayMovieActivity" />
        <activity android:name=".RegisterMovieActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>